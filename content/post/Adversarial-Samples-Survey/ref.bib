isbn = {9781509017515},
journal = {Proceedings - 2016 IEEE European Symposium on Security and Privacy, EURO S and P 2016},
month = {mar},
pages = {372--387},
publisher = {IEEE},
title = {{The limitations of deep learning in adversarial settings}},
url = {http://ieeexplore.ieee.org/document/7467366/},
